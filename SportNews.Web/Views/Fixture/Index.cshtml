@model SportNews.Web.ViewModels.FixtureViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div id="container" class="col-md-8 col-sm-12" style="background-color: #2b2b2b; color:white; text-align: center">
        <div style="display: inline-grid">
            <h3>@Model.LeagueName</h3>
            @foreach (var fixture in Model.Fixtures)
            {
                <div class="col-xs-4 col-sm-4 col-lg-8" style="box-shadow: 0 0 5px rgba(0,0,0,0.5); padding: 25px; margin-top: 15px; width: 100%">
                    <div class="col-xs-4 col-sm-4 col-lg-4">
                        <figure>
                            <img style="width: -webkit-fill-available;" src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(@fixture.HomeTeam.Badge))" />
                            <figcaption style="text-align:center; font-size:15px; padding-top: 10px;">@fixture.HomeTeam.Name</figcaption>
                        </figure>
                    </div>
                    <div class="col-lg-4" style="text-align: center">
                        <h2>@fixture.EventTime</h2>
                        <span>VS</span>
                        <h2>@fixture.EventResult</h2>
                        <h2>@fixture.EventStatus'</h2>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-lg-4" style="float: right;">
                        <figure>
                            <img style="width: -webkit-fill-available;" src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(@fixture.AwayTeam.Badge))" />
                            <figcaption style="text-align:center; font-size:15px; padding-top: 10px;">@fixture.AwayTeam.Name</figcaption>
                        </figure>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="container" class="col-lg-3" style="background-color: #2b2b2b; border-top: 2px solid deeppink">
        <aside>
            @foreach (var country in Model.Countries)
            {
                <p>
                    <a data-toggle="collapse" data-target="#@country.CountryID" role="button" aria-expanded="false" aria-controls="collapseExample" style="color: white">
                        @country.Name
                    </a>
                </p>
                <ul class="collapse" id="@country.CountryID" style="box-shadow: 0 0 5px rgba(0,0,0,0.5)">
                    @foreach (var league in Model.Leagues.Where(l => l.CountryID == country.CountryID))
                    {
                        <li>
                            <a asp-action="Index" asp-controller="Fixture" asp-route-id="@league.LeagueID" style="color: white">@league.Name</a>
                        </li>
                    }
                </ul>
            }
        </aside>
    </div>
</div>

